{
  "name": "fnr-assignment",
  "version": "1.0.0",
  "description": "Simple graphql http server for managing products database ",
  "main": "index.js",
  "scripts": {
    "start": "ts-node index.ts",
    "seed-db": "ts-node scripts/seedDb.ts",
    "test:unit": "jest --coverage  --testMatch='**/*.spec.ts'",
    "test:api": "jest --coverage --testMatch='**/api.test.ts' ",
    "lint": "eslint .",
    "sync-products": "ts-node scripts/syncProducts.ts",
    "prepare": "husky"
  },
  "husky":{
    "hooks": {
      "pre-commit": "if git-branch-is master; then npm run lint && npm run test:unit; fi"
    }
  },
  "author": "Denis Latushkin (capt.osmant@proton.me)",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^20.11.30",
    "dotenv": "^16.4.5",
    "graphql": "^16.8.1",
    "mongodb": "^6.5.0",
    "pino": "^8.19.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.1",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "pactum": "^3.6.3",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.4.0"
  }
}
